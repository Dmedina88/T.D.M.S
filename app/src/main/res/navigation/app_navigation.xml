<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/poopListFragment">

    <fragment
        android:id="@+id/calenderFragment"
        android:name="inc.grayherring.com.thedavidmedinashowapp.ui.calendar.CalenderFragment"
        android:label="fragment_calender"
        tools:layout="@layout/fragment_calender"/>
    <fragment
        android:id="@+id/poopListFragment"
        android:name="inc.grayherring.com.thedavidmedinashowapp.ui.pooplist.PoopListFragment"
        android:label="PoopListFragment">
      <action
          android:id="@+id/action_list_to_flow"
          app:destination="@id/poopFlowFragment"
          app:enterAnim="@anim/slide_in_right"
          app:exitAnim="@anim/slide_out_left"
          app:popEnterAnim="@anim/slide_in_left"
          app:popExitAnim="@anim/slide_out_right" />
    </fragment>
  <fragment
      android:id="@+id/poopFlowFragment"
      android:name="inc.grayherring.com.thedavidmedinashowapp.ui.addeditlog.PoopFlowFragment"
      android:label="PoopFlowFragment">
    <argument
        android:name="id"
        app:argType="integer"
        android:defaultValue="-1"/>
  </fragment>
</navigation>