<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/poopListFragment">

    <fragment
        android:id="@+id/calenderFragment"
        android:name="inc.grayherring.com.thedavidmedinashowapp.ui.calendar.CalenderFragment"
        android:label="fragment_calender"
        tools:layout="@layout/fragment_calender"/>
    <fragment
        android:id="@+id/poopListFragment"
        android:name="inc.grayherring.com.thedavidmedinashowapp.ui.pooplist.PoopListFragment"
        android:label="PoopListFragment">
        <action
                android:id="@+id/list_to_editLogFragment"
                app:destination="@+id/editLogFragment"/>
      <action
          android:id="@+id/action_poopListFragment_to_poopFlowFragment"
          app:destination="@id/poopFlowFragment"
          app:enterAnim="@anim/slide_in_right"
          app:exitAnim="@anim/slide_out_left"
          app:popEnterAnim="@anim/slide_in_left"
          app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/addLogFragment"
        android:name="inc.grayherring.com.thedavidmedinashowapp.ui.addeditlog.add.AddLogFragment"
        android:label="add_log_fragment"/>
    <fragment
        android:id="@+id/editLogFragment"
        android:name="inc.grayherring.com.thedavidmedinashowapp.ui.addeditlog.edit.EditLogFragment"
        android:label="EditLogFragment">
        <argument
            android:name="poopId"
            android:defaultValue="0"
            app:argType="integer"/>
    </fragment>
  <fragment
      android:id="@+id/poopFlowFragment"
      android:name="inc.grayherring.com.thedavidmedinashowapp.ui.addeditlog.PoopFlowFragment"
      android:label="PoopFlowFragment"/>
</navigation>