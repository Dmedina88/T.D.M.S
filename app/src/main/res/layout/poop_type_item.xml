<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
  <!--would have used data binding if not for having it import extension properties-->
  <!--android:background="@{item.selected ? @color/white : @color/colorPrimary}"-->
  <!--android:background="@{item.poopType.icon}"-->
  <!--android:text="@{item.poopType.strRes}"-->
  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <LinearLayout
        android:layout_width="64dp"
        android:layout_height="46dp"
        android:orientation="vertical"
        >
      <ImageView
          android:id="@+id/icon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          />
      <TextView
          android:id="@+id/detail"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:gravity="center"
          />
    </LinearLayout>
  </androidx.cardview.widget.CardView>
</layout>
