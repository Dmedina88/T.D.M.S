<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>

    <variable
        name="vm"
        type="inc.grayherring.com.thedavidmedinashowapp.ui.addeditlog.PoopFlowViewModel"
        />

  </data>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:padding="16dp"
      tools:context=".ui.addeditlog.flowpages.DatePickerFragment"
      >
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="@string/optional_name_hint"
        >

      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/name_edit_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@={vm.name}"
          />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:gravity="start"
        android:hint="@string/optional_notes"
        >

      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/notes_edit_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="start"
          android:text="@={vm.notes}"
          />


    </com.google.android.material.textfield.TextInputLayout>
  </LinearLayout>
</layout>